/* Import Theme Files */
@import "../../themes/colors.css";
@import "../../themes/sizes.css";
@import "../../themes/typography.css";
@import "../../themes/utilities.css";

/* Tailwind CSS v4 */
@import "tailwindcss";
@plugin "tailwindcss-animate";

@custom-variant dark (&:is(.dark *));

@theme {
  /* ============================================================
     PRIMITIVE COLORS - Direct values for Tailwind utilities
     ============================================================ */

  /* Base Colors */
  --color-static-black: #000000;
  --color-static-white: #ffffff;
  --color-transparent: rgba(255, 255, 255, 0);

  /* Brand Scale */
  --color-brand-50: #ebfbf1;
  --color-brand-100: #d4f5e0;
  --color-brand-200: #a8ebc6;
  --color-brand-300: #72dca4;
  --color-brand-400: #3bc882;
  --color-brand-500: #10b666;
  --color-brand-600: #00a859;
  --color-brand-700: #008a4b;
  --color-brand-800: #006b3b;
  --color-brand-900: #004d2a;
  --color-brand-950: #002916;

  /* Neutral Scale */
  --color-neutral-0: #ffffff;
  --color-neutral-50: #f9fafb;
  --color-neutral-100: #f3f4f6;
  --color-neutral-200: #e9eaec;
  --color-neutral-300: #cbd0d4;
  --color-neutral-400: #adb3bc;
  --color-neutral-500: #9ca3af;
  --color-neutral-600: #7e8994;
  --color-neutral-700: #5f6b77;
  --color-neutral-800: #3f4954;
  --color-neutral-900: #262e36;
  --color-neutral-950: #111111;

  /* Warning Scale */
  --color-warning-50: #fdfaf0;
  --color-warning-100: #fdf4d8;
  --color-warning-200: #eed0ab;
  --color-warning-300: #e8b878;
  --color-warning-400: #c79a65;
  --color-warning-500: #f59e0b;
  --color-warning-600: #d97706;
  --color-warning-700: #b45309;
  --color-warning-800: #92400e;
  --color-warning-900: #78350f;
  --color-warning-950: #3e260b;

  /* Success Scale */
  --color-success-50: #ebfbf1;
  --color-success-100: #d4f5e0;
  --color-success-200: #a8ebc6;
  --color-success-300: #72dca4;
  --color-success-400: #3bc882;
  --color-success-500: #10b666;
  --color-success-600: #00a859;
  --color-success-700: #008a4b;
  --color-success-800: #006b3b;
  --color-success-900: #004d2a;
  --color-success-950: #002916;

  /* Critical Scale */
  --color-critical-50: #fef2f2;
  --color-critical-100: #feeded;
  --color-critical-200: #fecaca;
  --color-critical-300: #fca5a5;
  --color-critical-400: #f87171;
  --color-critical-500: #ef4444;
  --color-critical-600: #dc2626;
  --color-critical-700: #b91c1c;
  --color-critical-800: #991b1b;
  --color-critical-900: #7f1d1d;
  --color-critical-950: #450a0a;

  /* Info Scale */
  --color-info-50: #e6f3ff;
  --color-info-100: #cce4ff;
  --color-info-200: #99c9ff;
  --color-info-300: #66adff;
  --color-info-400: #3392ff;
  --color-info-500: #0085ff;
  --color-info-600: #0066cc;
  --color-info-700: #0052a3;
  --color-info-800: #1a2a3d;
  --color-info-900: #111c29;
  --color-info-950: #080e14;

  /* ============================================================
     SEMANTIC COLORS - Reference primitives above
     ============================================================ */

  /* Semantic Backgrounds */
  --color-bg-canvas: var(--color-neutral-0);
  --color-bg-background: var(--color-neutral-0);
  --color-bg-muted: var(--color-neutral-100);
  --color-bg-fill: var(--color-neutral-600);
  --color-bg-inverse: var(--color-neutral-950);
  --color-bg-primary: var(--color-brand-600);
  --color-bg-primary-hover: var(--color-brand-700);
  --color-bg-primary-subtle: var(--color-brand-50);
  --color-bg-secondary: var(--color-neutral-0);
  --color-bg-secondary-hover: var(--color-neutral-50);
  --color-bg-secondary-subtle: var(--color-neutral-0);
  --color-bg-success: var(--color-success-600);
  --color-bg-success-hover: var(--color-success-700);
  --color-bg-success-subtle: var(--color-success-50);
  --color-bg-success-muted: var(--color-success-50);
  --color-bg-warning: var(--color-warning-600);
  --color-bg-warning-hover: var(--color-warning-700);
  --color-bg-warning-subtle: var(--color-warning-50);
  --color-bg-warning-muted: var(--color-warning-100);
  --color-bg-critical: var(--color-critical-500);
  --color-bg-critical-hover: var(--color-critical-600);
  --color-bg-critical-subtle: var(--color-critical-50);
  --color-bg-critical-muted: var(--color-critical-100);
  --color-bg-info: var(--color-info-600);
  --color-bg-info-hover: var(--color-info-700);
  --color-bg-info-subtle: var(--color-info-50);
  --color-bg-info-muted: var(--color-info-50);
  --color-bg-subtle: var(--color-neutral-50);
  --color-bg-elevated: var(--color-neutral-300);
  --color-bg-surface: var(--color-neutral-0);

  /* Semantic Foregrounds */
  --color-fg-main: var(--color-neutral-600);
  --color-fg-subtle: var(--color-neutral-300);
  --color-fg-muted: var(--color-neutral-500);
  --color-fg-moderate: var(--color-neutral-800);
  --color-fg-strong: var(--color-neutral-950);
  --color-fg-primary: var(--color-brand-600);
  --color-fg-on-primary: var(--color-neutral-0);
  --color-fg-secondary: var(--color-neutral-600);
  --color-fg-on-secondary: var(--color-neutral-600);
  --color-fg-tertiary: var(--color-neutral-600);
  --color-fg-on-tertiary: var(--color-neutral-600);
  --color-fg-interactive: var(--color-brand-600);
  --color-fg-on-inverted: var(--color-neutral-0);
  --color-fg-muted-on-inverted: var(--color-neutral-300);
  --color-fg-success: var(--color-success-600);
  --color-fg-warning: var(--color-warning-600);
  --color-fg-critical: var(--color-critical-500);
  --color-fg-info: var(--color-info-600);
  --color-fg-on-success: var(--color-neutral-0);
  --color-fg-on-warning: var(--color-neutral-0);
  --color-fg-on-critical: var(--color-neutral-0);
  --color-fg-on-info: var(--color-neutral-0);
  --color-fg-on-dark: var(--color-neutral-0);
  --color-fg-warning-muted: var(--color-warning-400);
  --color-fg-critical-muted: var(--color-critical-400);
  --color-fg-info-muted: var(--color-info-300);
  --color-fg-success-muted: var(--color-success-300);
  --color-fg-success-strong: var(--color-success-950);
  --color-fg-warning-strong: var(--color-warning-950);
  --color-fg-critical-strong: var(--color-critical-950);

  /* Semantic Borders */
  --color-border: var(--color-neutral-200);
  --color-border-muted: var(--color-neutral-100);
  --color-border-strong: var(--color-neutral-600);
  --color-border-primary: var(--color-brand-600);
  --color-border-secondary: var(--color-neutral-200);
  --color-border-inverted: var(--color-neutral-950);
  --color-border-success: var(--color-success-600);
  --color-border-warning: var(--color-warning-600);
  --color-border-critical: var(--color-critical-600);
  --color-border-info: var(--color-info-600);
  --color-border-moderate: var(--color-neutral-300);
  --color-border-primary-muted: var(--color-brand-100);
  --color-border-critical-muted: var(--color-critical-200);
  --color-border-warning-muted: var(--color-warning-200);
  --color-border-success-muted: var(--color-success-200);
  --color-border-info-muted: var(--color-info-200);

  /* Semantic Rings */
  --color-ring-primary: rgba(0, 168, 89, 0.15);
  --color-ring-secondary: rgba(17, 17, 17, 0.15);
  --color-ring-success: rgba(0, 168, 89, 0.15);
  --color-ring-warning: rgba(217, 119, 6, 0.15);
  --color-ring-critical: rgba(239, 68, 68, 0.15);
  --color-ring-info: rgba(0, 102, 204, 0.15);

  /* ============================================================
     SIZES
     ============================================================ */

  /* Form Heights */
  --height-form-xxs: 26px;
  --height-form-xs: 36px;
  --height-form-sm: 40px;
  --height-form-md: 46px;
  --height-form-lg: 52px;
  --height-form-xl: 60px;

  /* ============================================================
     BORDER RADIUS
     ============================================================ */
  --radius-sm: 10px;
  --radius-base: 14px;
  --radius-lg: 18px;
  --radius-xl: 32px;

  /* Shadcn UI compatibility */
  --radius: 14px;

  /* ============================================================
     SHADCN UI COMPATIBILITY - Color Mappings
     ============================================================ */
  --color-background: var(--background);
  --color-foreground: var(--foreground);
  --color-card: var(--card);
  --color-card-foreground: var(--card-foreground);
  --color-popover: var(--popover);
  --color-popover-foreground: var(--popover-foreground);
  --color-primary: var(--primary);
  --color-primary-foreground: var(--primary-foreground);
  --color-secondary: var(--secondary);
  --color-secondary-foreground: var(--secondary-foreground);
  --color-muted: var(--muted);
  --color-muted-foreground: var(--muted-foreground);
  --color-accent: var(--accent);
  --color-accent-foreground: var(--accent-foreground);
  --color-destructive: var(--destructive);
  --color-destructive-foreground: var(--destructive-foreground);
  --color-border: var(--border);
  --color-input: var(--input);
  --color-ring: var(--ring);
  --color-chart-1: var(--chart-1);
  --color-chart-2: var(--chart-2);
  --color-chart-3: var(--chart-3);
  --color-chart-4: var(--chart-4);
  --color-chart-5: var(--chart-5);
  --color-sidebar: var(--sidebar);
  --color-sidebar-foreground: var(--sidebar-foreground);
  --color-sidebar-primary: var(--sidebar-primary);
  --color-sidebar-primary-foreground: var(--sidebar-primary-foreground);
  --color-sidebar-accent: var(--sidebar-accent);
  --color-sidebar-accent-foreground: var(--sidebar-accent-foreground);
  --color-sidebar-border: var(--sidebar-border);
  --color-sidebar-ring: var(--sidebar-ring);

  /* Font Family - Geist */
  --font-family-sans: var(--font-geist-sans);
  --font-family-mono: var(--font-geist-mono);
}

:root {
  --radius: 0.625rem;
  --background: oklch(1 0 0);
  --foreground: oklch(0.145 0 0);
  --card: oklch(1 0 0);
  --card-foreground: oklch(0.145 0 0);
  --popover: oklch(1 0 0);
  --popover-foreground: oklch(0.145 0 0);
  --primary: oklch(0.205 0 0);
  --primary-foreground: oklch(0.985 0 0);
  --secondary: oklch(0.97 0 0);
  --secondary-foreground: oklch(0.205 0 0);
  --muted: oklch(0.97 0 0);
  --muted-foreground: oklch(0.556 0 0);
  --accent: oklch(0.97 0 0);
  --accent-foreground: oklch(0.205 0 0);
  --destructive: oklch(0.577 0.245 27.325);
  --border: oklch(0.922 0 0);
  --input: oklch(0.922 0 0);
  --ring: oklch(0.708 0 0);
  --chart-1: oklch(0.646 0.222 41.116);
  --chart-2: oklch(0.6 0.118 184.704);
  --chart-3: oklch(0.398 0.07 227.392);
  --chart-4: oklch(0.828 0.189 84.429);
  --chart-5: oklch(0.769 0.188 70.08);
  --sidebar: oklch(0.985 0 0);
  --sidebar-foreground: oklch(0.145 0 0);
  --sidebar-primary: oklch(0.205 0 0);
  --sidebar-primary-foreground: oklch(0.985 0 0);
  --sidebar-accent: oklch(0.97 0 0);
  --sidebar-accent-foreground: oklch(0.205 0 0);
  --sidebar-border: oklch(0.922 0 0);
  --sidebar-ring: oklch(0.708 0 0);
}

.dark {
  --background: oklch(0.145 0 0);
  --foreground: oklch(0.985 0 0);
  --card: oklch(0.205 0 0);
  --card-foreground: oklch(0.985 0 0);
  --popover: oklch(0.205 0 0);
  --popover-foreground: oklch(0.985 0 0);
  --primary: oklch(0.922 0 0);
  --primary-foreground: oklch(0.205 0 0);
  --secondary: oklch(0.269 0 0);
  --secondary-foreground: oklch(0.985 0 0);
  --muted: oklch(0.269 0 0);
  --muted-foreground: oklch(0.708 0 0);
  --accent: oklch(0.269 0 0);
  --accent-foreground: oklch(0.985 0 0);
  --destructive: oklch(0.704 0.191 22.216);
  --border: oklch(1 0 0 / 10%);
  --input: oklch(1 0 0 / 15%);
  --ring: oklch(0.556 0 0);
  --chart-1: oklch(0.488 0.243 264.376);
  --chart-2: oklch(0.696 0.17 162.48);
  --chart-3: oklch(0.769 0.188 70.08);
  --chart-4: oklch(0.627 0.265 303.9);
  --chart-5: oklch(0.645 0.246 16.439);
  --sidebar: oklch(0.205 0 0);
  --sidebar-foreground: oklch(0.985 0 0);
  --sidebar-primary: oklch(0.488 0.243 264.376);
  --sidebar-primary-foreground: oklch(0.985 0 0);
  --sidebar-accent: oklch(0.269 0 0);
  --sidebar-accent-foreground: oklch(0.985 0 0);
  --sidebar-border: oklch(1 0 0 / 10%);
  --sidebar-ring: oklch(0.556 0 0);
}

@layer base {
  * {
    @apply border-border outline-ring/50;
  }

  body {
    @apply bg-background text-foreground;
  }
}